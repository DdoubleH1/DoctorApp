<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.auth.signIn.SignInFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logo_signin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWelcomeSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_20dp"
            android:text="@string/string_welcome_sign_in"
            android:textColor="@color/black"
            android:textSize="@dimen/common_size_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/icLogo"
            app:layout_constraintStart_toStartOf="@id/icLogo"
            app:layout_constraintTop_toBottomOf="@id/icLogo" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_marginTop="@dimen/common_size_30dp"
            android:background="@drawable/bg_edit_text"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/common_size_10dp"
            android:hint="@string/string_hint_email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/common_size_10dp"
            android:textColorHint="@color/color_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcomeSignIn" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_marginTop="@dimen/common_size_20dp"
            android:background="@drawable/bg_edit_text"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="@dimen/common_size_10dp"
            android:hint="@string/string_hint_password"
            android:inputType="textPassword"
            android:padding="@dimen/common_size_10dp"
            android:textColorHint="@color/color_text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etEmail" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/common_size_20dp"
            android:layout_marginTop="@dimen/common_size_30dp"
            android:background="@drawable/bg_button"
            android:maxLines="1"
            android:text="@string/string_sign_in"
            android:textColor="@color/white"
            android:textSize="@dimen/common_size_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPassword" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_20dp"
            android:text="@string/string_forgot_password"
            android:textColor="@color/color_1c64f2"
            android:textSize="@dimen/common_text_size_14sp"
            app:layout_constraintEnd_toEndOf="@id/btnSignIn"
            app:layout_constraintStart_toStartOf="@id/btnSignIn"
            app:layout_constraintTop_toBottomOf="@id/btnSignIn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_size_20dp"
            android:text="@string/string_sign_up_in_sign_in_full"
            app:layout_constraintEnd_toEndOf="@id/tvForgotPassword"
            app:layout_constraintStart_toStartOf="@id/tvForgotPassword"
            app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>